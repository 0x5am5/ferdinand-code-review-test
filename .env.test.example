# Test Environment Variables
# Copy this file to .env.test and fill in your actual test values
# DO NOT commit .env.test to version control

# Database
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_database

# Session Security
SESSION_SECRET=your-test-session-secret-here-minimum-32-characters

# Firebase Configuration (for testing)
FIREBASE_PROJECT_ID=your-test-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour test private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=test-service-account@your-test-project.iam.gserviceaccount.com

# Email Service (Postmark)
POSTMARK_API_KEY=your-test-postmark-api-key
POSTMARK_FROM_EMAIL=test@example.com

# Font Services
ADOBE_FONTS_API_KEY=your-test-adobe-fonts-api-key
GOOGLE_FONTS_API_KEY=your-test-google-fonts-api-key

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-test-slack-bot-token
SLACK_SIGNING_SECRET=your-test-slack-signing-secret
SLACK_CLIENT_ID=your-test-slack-client-id
SLACK_CLIENT_SECRET=your-test-slack-client-secret

# AI Services
OPENAI_API_KEY=sk-your-test-openai-api-key

# Encryption
ENCRYPTION_KEY=your-test-encryption-key-minimum-32-characters

# Replit (if applicable)
REPL_ID=your-test-repl-id

# Application Configuration
NODE_ENV=test
PORT=3001
APP_BASE_URL=http://localhost:3001

# Development Overrides
BYPASS_AUTH_FOR_LOCAL_DEV=false
DEV_USER_EMAIL=test@example.com

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
